# App Platform Environment Template (.env.example.app-platform)
# Copy these into DigitalOcean App Platform > Settings > Environment Variables

# Database (MySQL)
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=feather_press

# Storage (DigitalOcean Spaces or any S3-compatible)
# Set STORAGE_PROVIDER to "spaces" (any non-local value enables object storage)
STORAGE_PROVIDER=spaces
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_REGION=nyc3
SPACES_BUCKET=
SPACES_KEY=
SPACES_SECRET=
# Optional CDN/base domain for files
PUBLIC_CDN_BASE=

# App
NODE_ENV=production
